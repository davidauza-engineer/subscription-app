<h2>Publications</h2>

<div class="mb-3">
  <%= link_to 'New Publication', new_admin_publication_path, class: 'btn btn-primary' %>
</div>

<% @publications.each do |publication| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= publication.title %></h5>
      <p class="card-text"><%= publication.description %></p>
      <p class="card-text"><%= publication.file_url %></p>
      <%= link_to 'View more details', admin_publication_path(publication), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_admin_publication_path(publication), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>